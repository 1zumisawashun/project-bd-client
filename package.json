  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "custom-rules:watch": "npx tsc -p ./eslint-plugin-custom-rules/tsconfig.json --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:reset": "pkill -f 'next dev' || true && sleep 1 && rm -f sqlite.db && npm run db:push && npm run db:seed",
    "db:seed": "tsx ./app/functions/libs/drizzle/seed.ts",
    "db:studio": "drizzle-kit studio",
    "dev": "next dev",
    "eslint:test": "npx eslint",
    "fix": "npm run format:fix && npm run lint:fix",
    "format": "oxfmt --check",
    "format:fix": "oxfmt --write",
    "lint": "npm run lint:eslint && npm run lint:oxlint",
    "lint:eslint": "npx eslint 'app/**/*.{ts,tsx}' --cache",
    "lint:eslint:fix": "npm run lint:eslint -- --fix",
    "lint:eslint:watch": "npx eslint --inspect-config",
    "lint:fix": "npm run lint:eslint:fix && npm run lint:oxlint:fix",
    "lint:oxlint": "npx oxlint --type-aware --type-check --tsconfig ./tsconfig.json",
    "lint:oxlint:fix": "npm run lint:oxlint -- --fix",
    "start": "next start",
    "storybook": "storybook dev -p 6006",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "npx tsc --noEmit",
    "vercel-build": "next build"
  },
